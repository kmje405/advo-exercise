---
import { fetchData } from "../utils/fetchData";

const data = await fetchData("resources");
---

<div class="container mx-auto p-4">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {data.map(doc => (
      <div class="rounded-2xl bg-gray-300 p-4">
        <h2 class="text-xl font-bold mb-2">{doc.resourceName}</h2>
        <p class="py-2"><strong>Phone:</strong> {doc.phone}</p>
        <p class="py-2"><strong>Email:</strong> {doc.contactEmail}</p>
        <p class="py-2"><strong>URL:</strong> <a href={doc.url} class="text-blue-500 hover:underline">{doc.url}</a></p>
      </div>
    ))}
  </div>
</div>
