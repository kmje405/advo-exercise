---
interface ButtonProps {
  label: string;
  href?: string;
  size: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
}

const { label, href, size, type = 'button' } = Astro.props as ButtonProps;

const sizeClasses: { [key in ButtonProps['size']]: string } = {
  sm: 'py-1 px-4 text-sm',
  md: 'py-2 px-6 text-base',
  lg: 'py-3 px-8 text-lg',
};

const baseClasses = 'bg-black text-white rounded';

const classes = `${baseClasses} ${sizeClasses[size]}`;
---

<a href={href} class={classes} role="button">
  <button type={type} class="w-full h-full">
    {label}
  </button>
</a>
